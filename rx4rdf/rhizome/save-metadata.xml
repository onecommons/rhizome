<?xml version="1.0" encoding="UTF-8"?>
<xu:modifications version="1.0" xmlns:xu="http://www.xmldb.org/xupdate" 
xmlns:wf="http://rx4rdf.sf.net/ns/racoon/xpath-ext#" 
xmlns:f="http://xmlns.4suite.org/ext" >
  <xu:if test="wf:has-metadata('resource')">
    <xu:variable name="dummy" select="wf:save-metadata($metadata, $__user, $resource)"/>
  </xu:if>
  
  <xu:if test="not(wf:has-metadata('resource'))">
    <!-- no resource, add new content -->
    <xu:variable name="dummy" select="wf:save-metadata($metadata, $__user)"/>
  </xu:if>
</xu:modifications>

